<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  - See springframework documentation for proper syntax.
  -   http://static.springsource.org/spring/docs/3.0.x/spring-framework-reference/html/beans.html
  -->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <bean id="FreeSwitchCustomExtensionsHibernate" class="org.sipfoundry.sipxconfig.common.HibernateConfigurationPlugin">
    <property name="mappingResources">
      <list>
        <value>org/sipfoundry/sipxconfig/freeswitchcustomextensions/freeswitchcustomextensions.hbm.xml</value>
      </list>
    </property>
  </bean>

  <bean id="freeswitchcustomextensionsI18n"
	class="org.springframework.context.support.ResourceBundleMessageSource">
	<property name="basename" value="freeswitchcustomextensions" />
  </bean>

  <bean id="freeSwitchCustomExtensionsContext" class="org.springframework.aop.framework.ProxyFactoryBean" parent="abstractDao">
    <property name="proxyInterfaces" value="org.sipfoundry.sipxconfig.freeswitchcustomextensions.FreeSwitchCustomExtensionsContext"/>
    <property name="target" ref="freeSwitchCustomExtensionsContextImpl"/>
  </bean>

  <bean id="freeSwitchCustomExtensionsContextImpl" class="org.sipfoundry.sipxconfig.freeswitchcustomextensions.FreeSwitchCustomExtensionsContextImpl" parent="abstractDaoImpl">
    <property name="replicationManager" ref="replicationManagerImpl" />
    <property name="aliasManager" ref="aliasManager"/>
    <property name="featureManager" ref="featureManager" />
    <property name="settingsDao">
      <bean parent="beanWithSettingsDao">
        <property name="target">
          <bean parent="beanWithSettingsDaoImpl">
            <constructor-arg value="org.sipfoundry.sipxconfig.freeswitchcustomextensions.FreeSwitchCustomExtensionsSettings"/>
          </bean>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="freeswitchcustomextensionsHook" class="org.sipfoundry.sipxconfig.site.SimplePluginHook">
    <property name="hookId" value="FreeSwitchCustomExtensionsHook"/>
    <property name="featureId" value="freeswitchcustomextensions"/>
  </bean>

</beans>
